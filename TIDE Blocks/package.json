{
  "name": "tide-blocks",
  "version": "1.0.3",
  "description": "TIDE Blocks desktop App",
  "main": "main.js",
  "scripts": {
    "install": "electron-rebuild",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DarkAnfi/TideBlocksUCT.git"
  },
  "author": "TIDE",
  "license": "MIT",
  "build": {
    "appId": "tide-blocks",
    "files": [
      "bin/**",
      "libraries/**",
      "css/**",
      "fonts/**",
      "js/**",
      "pictures/**",
      "home.html",
      "main.js",
      "package.json"
    ],
    "asar": false,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/favicon.ico"
    }
  },
  "bugs": {
    "url": "https://github.com/DarkAnfi/TideBlocksUCT/issues"
  },
  "homepage": "https://github.com/DarkAnfi/TideBlocksUCT#readme",
  "dependencies": {
    "html-to-json": "^0.6.0",
    "mousetrap": "^1.6.3",
    "serialport": "^7.1.5"
  },
  "devDependencies": {
    "electron": "^4.1.5",
    "electron-builder": "^20.39.0",
    "electron-rebuild": "^1.8.4"
  }
}
